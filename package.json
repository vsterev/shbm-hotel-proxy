{
    "name": "hotel-proxy",
    "version": "1.0.0",
    "author": "Vassil Shterev <vsterev@gmail.com>",
    "license": "MIT",
    "main": "src/dist/app.js",
    "scripts": {
        "start": "tsoa routes && tsc && node dist/app.js",
        "dev": "nodemon --watch 'src' --exec 'tsoa spec-and-routes && ts-node src/app.ts' -e ts",
        "dev2": "concurrently \"tsoa routes -w\" \"tsc -w\" \"nodemon dist/src/app.js\"",
        "build": "tsoa spec-and-routes && tsc",
        "lint2": "npx eslint --report-unused-disable-directives",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "npx eslint --report-unused-disable-directives --fix",
        "typescript-check": "tsc --noEmit"
    },
    "dependencies": {
        "body-parser": "^1.20.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "ioredis": "^5.6.0",
        "joi": "^17.13.3",
        "morgan": "^1.10.0",
        "node-cron": "^3.0.3",
        "swagger-ui-express": "^5.0.1",
        "tsoa": "^6.6.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.25.0",
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.1",
        "@types/joi": "^17.2.3",
        "@types/morgan": "^1.9.9",
        "@types/node-cron": "^3.0.11",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.30.1",
        "@typescript-eslint/parser": "^8.30.1",
        "concurrently": "^9.1.2",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "nodemon": "^3.1.9",
        "prettier": "3.5.3",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0"
    }
}
